{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,

		/* Safety & Node */
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],

		/* Paths */
		"baseUrl": ".",
		"rootDir": "."
	},
	"include": ["**/*.ts", "prisma.config.ts"],
	"exclude": ["node_modules"]
}
